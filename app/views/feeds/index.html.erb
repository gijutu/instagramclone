<p id="notice"><%= notice %></p>

<h1>投稿写真</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= image_tag feed.image,size:"320x480" %></td>
        <td><%= feed.content %></td>
        <td>投稿者<%= feed.user.name %></td>
      </tr>
      <tr>
        <td><%= link_to 'Favarite',favorites_path %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
        <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

